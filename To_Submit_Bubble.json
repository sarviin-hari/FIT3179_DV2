{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "params": [
      {
        "name": "Year_selection",
        "value": 2023,
        "bind": {
          "input": "range",
          "min": 2019,
          "max": 2023,
          "step": 1,
          "name": "Year: "
        }
      }
    ],
    "vconcat": [
      
      {

        
        "data": {
          "url": "https://raw.githubusercontent.com/sarviin-hari/FIT3179_Assignment_2/refs/heads/main/bubble.csv"
        },
        
        "encoding": {
          "color": {
            "condition": {
              "param": "brush",
              "title": "Sectors",
              "field": "sectors",
              "type": "nominal",
              "scale": {
                "domain": [
                  "Agriculture",
                  "Mining and quarrying",
                  "Manufacturing",
                  "Construction",
                  "Services"
                ],
                "range": ["#1abc9c", "#00bcd4", "#3f51b5", "#9b59b6", "#3498db"]
              },
              "legend": null,
            "condition": {
            "param": "highlight",
            "empty": false,
            "field": "sectors",
            "type": "nominal"
          }

            },
            "value": "lightgray"
          },
          "opacity": {
            "condition": {"param": "highlight", "value": 1},
            "value": 0.1
          },
          "size": {
            "title": "Labour Size",
            "field": "labour_size",
            "scale": {
              "domain": [-10, 2900],
              "range": [300, 5000]
            },
            "type": "quantitative",
            "legend": null
          },

          "x": {
            "field": "total_hours_worked",
            "title": "Total Hours Worked",
            "scale": {
              "domain": [-1, 7000]
            },
            "type": "quantitative",
            "axis": {
              "title": "Total Hours Worked",
              "labelFontSize": 20,
              "titleFontSize": 21,
              "grid": false

            }
          },
          "y": {
            "title": "Labour Productivity",
            "field": "labour_productivity_by_employee",
            "scale": {
              "domain": [0, 150]
            },
            "type": "quantitative",
            "axis": {
              "title": "Labour Productivity",
              "labelFontSize": 20,
              "titleFontSize": 21,
              "grid": false

                        }
          },
          "tooltip": [
            {"field": "departments", "title": "Industry"},
            {"field": "sectors", "title": "Sector"},
            {"field": "labour_size", "title": "Labour Size"},
            {"field": "total_hours_worked", "title": "Total Hours Worked"},
            {"field": "labour_productivity_by_employee", "title": "Labour Productivity"}
          ]
        },
        "width": 1100,
        "height": 500,
        "mark": {
          "type": "point",
          "filled": true,
          "size": 1
        },
        "params": [
          {
            "name": "brush",
            "select": {
              "type": "interval",
              "encodings": ["x"]
            }
          },
          {
            "name": "highlight", 
            "select": {"type": "point", "on": "mouseover"}, 
            "bind": "legend"
          }
        ],

        "transform": [
          {
            "filter": "datum.year == Year_selection"
          },
          {
            "filter": {
              "param": "click"
            }
          }
        ]
      },
      {
        "hconcat": [
          {
            "data": {
              "url": "https://raw.githubusercontent.com/sarviin-hari/FIT3179_Assignment_2/refs/heads/main/bubble.csv"
            },
            "encoding": {
              "color": {
                "condition": {
                  "param": "click",
                  "field": "sectors",
                  "scale": {
                    "domain": [
                      "Agriculture",
                      "Mining and quarrying",
                      "Manufacturing",
                      "Construction",
                      "Services"
                    ],
                    "range": ["#1abc9c", "#00bcd4", "#3f51b5", "#9b59b6", "#3498db", 
                    "#9b59b6", "#3498db"]
                  },
                  "legend": null
                },
                "value": "lightgray"
              },
              "x": {
                "aggregate": "sum",
                "field": "total_labour_size",
                "type": "quantitative",
                "title": "Labour Force Size",
                
                "axis": {
                  "title": "Labour Force Size",
                  "labelFontSize": 20,
                  "titleFontSize": 21,
                  "grid": false
    
                            }
              },
              "y": {
                "title": "Sectors",
                "field": "sectors",
                "axis": {
                  "title": "Sectors",
                  "labelFontSize": 20,
                  "titleFontSize": 21,
                  "labelLimit": 500,
                  "grid": false
    
                            }
              },
              "tooltip": [
                {"field": "sectors", "title": "Sector"},
                {"field": "total_labour_size", "title": "Labour Size"}
              ]
            },
            "width": 1100,
            "height": 200,
            "mark": "bar",
            "params": [
              {
                "name": "click",
                "select": {
                  "type": "point",
                  "fields": ["sectors"],
                  "encodings": ["color"]
                }
              }
            ],
            "transform": [
              {
                "filter": "datum.year == Year_selection"
              },
              {
                "filter": {
                  "param": "brush"
                }
              },
              {
                "aggregate": [
                  {
                    "op": "sum",
                    "field": "labour_size",
                    "as": "total_labour_size"
                  }
                ],
                "groupby": ["sectors"]
              }      
            ]
    
          }   ],
        "resolve": {"legend":{"color": "independent"}, "scale": {"color": "independent"} }

      }
    ]
  }
  